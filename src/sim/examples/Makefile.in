##############################################################################

@SET_MAKE@
@VARIABLES@

SIMSER=simulation
SIMPAR=psimulation

SIMSRC=sim.c simconnection.c
SIMSEROBJ=$(SIMSRC:.c=.o)
SIMPAROBJ=$(SIMSRC:.c=_par.o)

SIMFSER=simf
SIMFSRC=simf.f
SIMFSEROBJ=$(SIMFSRC:.f=.o)

CPPFLAGS=-I. @CPPFLAGS@
CFLAGS=-I. -I$(TOPDIR)/include/visit -Wimplicit-function-declaration
F77FLAGS=-I$(TOPDIR)/include/visit
LDFLAGS=@LDFLAGS@ -L$(TOPDIR)/archives

PARLIBS=@MPI_LIBS@

LIBS=@LIBS@ -lpthread -lsim
FLIBS=@LIBS@ -lpthread -lsimf -lsim

BUILD_FORTRAN=$(SIMFSER)

all:  $(SIMSER) $(SIMPAR) @BUILD_FORTRAN@

$(SIMSER): $(SIMSEROBJ)
	$(CC) -Wl,--export-dynamic $(SIMSEROBJ) $(LDFLAGS) $(LIBS)    -o $@

$(SIMPAR): $(SIMPAROBJ)
	$(CC) -Wl,--export-dynamic $(LDFLAGS) $(SIMPAROBJ) $(LIBS) $(PARLIBS)  -o $@

$(SIMSER).pure: $(SIMSEROBJ)
	purify $(LD) $(LDFLAGS) $(SIMSEROBJ) $(LIBS) -o $@

$(SIMFSER): $(SIMFSEROBJ)
	$(F77) -Wl,--export-dynamic $(SIMFSEROBJ) $(LDFLAGS) $(FLIBS) -o $@

clean:
	$(RM) $(SIMSEROBJ) $(SIMSER) $(SIMSER).pure
	$(RM) $(SIMPAROBJ) $(SIMPAR)
	$(RM) $(SIMFSEROBJ) $(SIMFSER)


@TARGETS@
