##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@
@MPI_CC@
@MPI_CXX@

CPPFLAGS= -I@tmpinc@ @ENGINE_CPPFLAGS@ @PLATFORM_CPPFLAGS@ @CPPFLAGS@ \
         -I. -I../../../include/visit

LIBSIM_RUNTIME_SER=libvisitenginev1_ser.@SHLIB_SOEXT@
LIBSIM_RUNTIME_PAR=libvisitenginev1_par.@SHLIB_SOEXT@

##
## Files...
##
SRC=VisItEngineV1.C
SEROBJ=$(SRC:.C=.o)
PAROBJ=$(SRC:.C=_par.o)

##
## Libraries that we need to link with
##
COMMONLIBS=-L../../../lib -lplugin -lavtview \
        -lvisit_vtk -llightweight_visit_vtk \
	-lenginerpc -lutility -lmisc -lcomm -lstate \
        -ldbatts -lavtexceptions -lexpr -lexpr -lparser -lvisit_verdict \
	$(VISIT_VTK_LDFLAGS)

SERLIBS=$(COMMONLIBS) -lviswindow_ser -lplotter_ser -lmir_ser -lavtwriter_ser \
        -lavtddf_ser -lavtivp_ser -lavtmath_ser -lavtshapelets_ser -ldatabase_ser -lquery_ser \
        -lexpressions_ser -lavtfilters_ser -lpipeline_ser  \
        -lengine_ser  \
        $(GLEW_LIBS) @VTKQT_LIBS@ $(VTK_LIBS) $(MESA_LIBS) $(GL_LIBS) $(X_LIBS) $(ZLIB_LIB) \
	@LIBS@ @PTHREAD_LIB@ @TCMALLOC_LIB@

PARLIBS=$(COMMONLIBS) -lviswindow_par -lplotter_par -lmir_par -lavtwriter_par \
        -lavtddf_par -lavtivp_par -lavtmath_par -lavtshapelets_par -ldatabase_par -lquery_par\
        -lexpressions_par -lavtfilters_par -lpipeline_par \
        -lengine_par \
        $(GLEW_LIBS) @VTKQT_LIBS@ $(VTK_LIBS) $(MESA_LIBS) $(GL_LIBS) $(X_LIBS) \
	$(ZLIB_LIB) @LIBS@ @PTHREAD_LIB@ @TCMALLOC_LIB@ @MPI_LIBS@

##
## Standard targets...
##
all: @LIBSIM_RUNTIME_SER@ @LIBSIM_RUNTIME_PAR@

clean:
	$(RM)  $(libdir)/$(LIBSIM_RUNTIME_SER)  $(libdir)/$(LIBSIM_RUNTIME_PAR)
	$(RM) $(SEROBJ) $(PAROBJ)

$(LIBSIM_RUNTIME_SER) or_no_ser_wrapper: $(SEROBJ)
	@SHLIB_CREATEPROG@ $(libdir)/$@ @VISITWRAPPER_RPATH@ $(LDFLAGS) $(SEROBJ) $(SERLIBS)

$(LIBSIM_RUNTIME_PAR) or_no_par_wrapper: $(PAROBJ)
	@SHLIB_CREATEPROG@ $(libdir)/$@ @VISITWRAPPER_RPATH@ $(LDFLAGS) $(PAROBJ) $(PARLIBS) \
	@ICET_LDFLAGS@ @ICET_LIBS@ @LIBCOGNOMEN@

##
## Automatic dependency stuff
##
@TARGETS@
@PARLIBTARGETS@
