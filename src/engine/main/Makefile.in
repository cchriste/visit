##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@
@MPI_CC@
@MPI_CXX@

CPPFLAGS= -I@tmpinc@ @ENGINE_CPPFLAGS@ @CPPFLAGS@ \
         -I. -I../../include/visit

SERLIBS=-L../../lib -lXext -lplugin -lviswindow -lavtmath_ser -lplotter \
        -ldatabase_ser -lmir -lquery_ser -lexpressions_ser -lpipeline_ser -lvisit_vtk \
	-lvtkqt -lwinutil @QT_LIBS@ -lenginerpc -lutility -lmisc -lcomm -lstate \
	-lengineparstate_ser -ldbatts -lavtexceptions -lparser @VTK_LIBS@ $(X_LIBS) \
	@LIBS@ @PTHREAD_LIB@

PARLIBS=-L../../lib -lXext -lplugin -lviswindow -lavtmath_ser -lplotter \
        -ldatabase_par -lmir -lquery_par -lexpressions_par -lpipeline_par -lvisit_vtk \
	-lvtkqt @QT_LIBS@ -lwinutil -lenginerpc -lutility -lmisc -lcomm -lstate \
	-lengineparstate_par -ldbatts -lavtexceptions -lparser @VTK_LIBS@ $(X_LIBS) \
	@LIBS@ @MPI_LIBS@ @PTHREAD_LIB@

SERLIBDEP=../../lib/libplugin.so ../../lib/libplotter.so \
          ../../lib/libdatabase_ser.so ../../lib/libpipeline_ser.so \
          ../../lib/libvisit_vtk.so ../../lib/libenginerpc.so \
          ../../lib/libutility.so ../../lib/libmisc.so \
          ../../lib/libcomm.so ../../lib/libstate.so \
          ../../lib/libengineparstate_ser.so ../../lib/libdbatts.so \
          ../../lib/libavtexceptions.so ../../lib/libmir.so 

PARLIBDEP=../../lib/libplugin.so ../../lib/libplotter.so \
          ../../lib/libdatabase_par.so ../../lib/libpipeline_par.so \
          ../../lib/libvisit_vtk.so ../../lib/libenginerpc.so \
          ../../lib/libutility.so ../../lib/libmisc.so \
          ../../lib/libcomm.so ../../lib/libstate.so \
          ../../lib/libengineparstate_par.so ../../lib/libdbatts.so \
          ../../lib/libavtexceptions.so ../../lib/libmir.so 

##
## Files...
##
SRC= \
    DataNetwork.C \
    Engine.C \
    EngineExprNode.C \
    EngineExprNodeFactory.C \
    LoadBalancer.C \
    Netnodes.C \
    NetworkManager.C \
    main.C

SEROBJ=$(SRC:.C=_ser.o)
PAROBJ=$(SRC:.C=_par.o)


##
## Standard targets...
##
all: @ENGINE_SER@ @ENGINE_PAR@

clean:
	$(RM) $(SEROBJ) @ENGINE_SER@
	$(RM) $(PAROBJ) @ENGINE_PAR@

##
## Other targets...
##
@ENGINE_SER@ or_no_ser: $(SERLIBDEP) $(SEROBJ)
	$(CXX) -o $@ $(LDFLAGS) $(SEROBJ) $(SERLIBS)

@ENGINE_PAR@ or_no_par: $(PARLIBDEP) $(PAROBJ)
	$(CXX) -o $@ $(LDFLAGS) $(PAROBJ) $(PARLIBS)

purify: $(SERLIBDEP) $(SEROBJ)
	purify -chain-length=64 $(CXX) -o @ENGINE_SER@ $(LDFLAGS) $(SEROBJ) $(SERLIBS)
	purify -chain-length=64 -follow-child-processes=yes $(CXX) -o @ENGINE_PAR@ $(LDFLAGS) $(PAROBJ) $(PARLIBS)

quantify: $(SERLIBDEP) $(SEROBJ)
	quantify $(CXX) -o @ENGINE_SER@ $(LDFLAGS) $(SEROBJ) $(SERLIBS)

##
## Automatic dependency stuff
##
@TARGETS@
