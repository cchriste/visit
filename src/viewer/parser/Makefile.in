##############################################################################

##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

##
## Libraries and includes...
##
LIB=libparser

VTK_LIBS=@VTK_LIBS@
VTK_INCLUDE=@VTK_INCLUDES@

LIBS=-L../../lib -L../../vtkqt -lengineproxy -lenginerpc -lviewerrpc \
     -lmdserverproxy -lmdserverrpc -ldbatts -lparser -lplugin -lviswindow \
     -lavtmath_ser -lplotter -lpipeline_ser -lvisit_vtk -lvtkqt -lwinutil \
     @QT_LIBS@ -lmisc -lcomm -lvclproxy  -lvclrpc -lproxybase -lstate -lutility \
     -lavtexceptions -lviewer $(VTK_LIBS) $(X_LIBS) @LIBS@ @PTHREAD_LIB@
LDFLAGS=@LDFLAGS@ @QT_LDFLAGS@
CXXFLAGS=@CXXFLAGS@
CPPFLAGS=@CPPFLAGS@ ${VTK_INCLUDE} -I. -I../../include/visit

##
## Files...
##
CONFIGPROG=exprconfig
TESTPROG=parse

COMMONSRC = ConfiguratingItem.C \
            ConfiguratingSet.C \
            ExprGrammar.C \
            Grammar.C \
            Rule.C \
            Sequence.C \
            Symbol.C \
            Token.C
LIBSRC    = Scanner.C \
            ParserBase.C
CONFIGSRC = ExprConfig.C
INITSRC   = ExprInit.C
TESTSRC   = test.C

COMMONOBJ=$(COMMONSRC:.C=.o)
LIBOBJ   =$(LIBSRC:.C=.o)
INITOBJ  =$(INITSRC:.C=.o)
CONFIGOBJ=$(CONFIGSRC:.C=.o)
TESTOBJ  =$(TESTSRC:.C=.o)

OBJ=$(COMMONOBJ) $(LIBOBJ) $(INITOBJ)

##
## Standard targets...
##
all: $(LIBSHARED)

clean:
	$(RM) $(COMMONOBJ) $(LIBOBJ) $(INITOBJ) $(CONFIGOBJ) $(TESTOBJ)
	$(RM) $(LIBSHARED)

##
## Intermediate targets...
##
.NO_CONFIG_REC:  $(INITSRC)
.NO_WINK_IN:     $(INITSRC)
$(INITSRC):
	./$(CONFIGPROG) $(INITSRC)

init: $(CONFIGPROG)
	./$(CONFIGPROG) $(INITSRC)

$(CONFIGPROG): $(COMMONOBJ) $(CONFIGOBJ)
	$(CXX) -o $@ $(LDFLAGS) $(LIBS) $(COMMONOBJ) $(CONFIGOBJ)

##
## Test targets...
##
$(TESTPROG) test: $(COMMONOBJ) $(INITOBJ) $(LIBOBJ) $(TESTOBJ)
	$(CXX) -o $(TESTPROG) $(LDFLAGS) $(LIBS) -lparser $(TESTOBJ)


##
## Automatic dependency stuff
##
@TARGETS@
@LIBTARGETS@
