##############################################################################

##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

CXXFLAGS=@CXXFLAGS@ -I. -I../../include/visit

##
## Files...
##
SRC=ViewerProxy.C
HDR=ViewerProxy.h
OBJ=$(SRC:.C=.o)
LIB=libviewerproxy
LIBS=-ldbatts -lavtexceptions -lviewerrpc -lcomm -lmisc -lstate -lplugin -lexpr -lparser -lutility

PROXYEXAMPLE=proxyexample
PROXYEXAMPLE_SRC=proxyexample.C
PROXYEXAMPLE_OBJ=$(PROXYEXAMPLE_SRC:.C=.o)
PROXYEXAMPLE_LIBS=$(LIBS) -lviewerproxy $(PY_LIB)

##
## Standard targets...
##
all: $(LIBSHARED)

clean:
	$(RM) $(LIBSHARED) $(tmpbin)/$(PROXYEXAMPLE)
	$(RM) $(OBJ) $(PROXYEXAMPLE_OBJ)

$(PROXYEXAMPLE): $(LIBSHARED) $(PROXYEXAMPLE_OBJ)
	$(CXX) -o $(tmpbin)/$(PROXYEXAMPLE) $(PROXYEXAMPLE_OBJ) $(LDFLAGS) $(PY_LDFLAGS) $(PROXYEXAMPLE_LIBS)

##
## Automatic dependency stuff
##
@TARGETS@
@LIBTARGETS@
