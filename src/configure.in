    if test "$SHORT_UNAME" = "darwin"; then
        VTK_LIGHTWEIGHT_LIBS=$VTK_LIBS
    else
        VTK_LIGHTWEIGHT_LIBS="-lvtkCommon -lvtkFiltering -lvtkzlib -lvtkexpat -lvtksys"
    fi
