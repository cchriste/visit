##############################################################################

@SET_MAKE@
@VARIABLES@

all: incpython incvtk incmesa incqt

incpython:
	if test -n "@PYDIR@"; then                       \
	    $(RM) python                             ;   \
	    ln -s @PYDIR@/include/@PYVERSION@ python ;   \
	fi

incvtk:
	$(RM) vtk
	ln -s @VTK_DIR@ vtk

incmesa:
	$(RM) mesa
	ln -s @MESA_DIR@/include mesa

incqt:
	if test -n "@QT_INCLUDE@"; then              \
	    $(RM) qt                        ;   \
	    ln -s @QT_INCLUDE@ qt        ;   \
	fi

clean:

distclean:
	$(RM) python vtk mesa qt Makefile

install:
install_bin:
install_lib:
install_dirs:

.NO_WINK_IN: python vtk mesa qt
