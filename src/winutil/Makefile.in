##############################################################################

##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

CXXFLAGS=-I. -I../include/visit -I../include $(QT_CXXFLAGS) @CXXFLAGS@
CPPFLAGS=-I. @CPPFLAGS@
LDFLAGS=$(LDFLAGSORIG) $(QT_LDFLAGS)

##
## Files...
##
HDRMOC = QvisColorTableButton.h \
         QvisVariableButton.h \
         QvisVariableButtonHelper.h \
         QvisVariablePopupMenu.h
HDR=Appearance.h VariableMenuPopulator.h WindowMetrics.h UnicodeHelper.h ${HDRMOC}
SRC=${HDR:.h=.C}
SRCMOC=${HDRMOC:.h=_moc.C}
OBJMOC=${SRCMOC:.C=.o}
OBJ=$(SRC:.C=.o) ${OBJMOC}

LIB=libwinutil
LIBS=-ldbatts -lstate -lcomm -lmisc -lavtexceptions -lutility -lexpr -lparser $(QT_CORE_LIB) $(QT_GUI_LIB)

##
## Standard targets...
##
all: message $(LIBSHARED)

clean:
	$(RM) $(OBJ) $(LIBSHARED) $(SRCMOC)

##
## Other targets
##
message:
	@echo
	@echo "****************************************************************************"
	@echo "*** Building WinUtil Library ($(LIB))"
	@echo "****************************************************************************"

moc: $(SRCMOC)

##
## Automatic dependency stuff
##
@TARGETS@
@LIBTARGETS@
