##############################################################################

##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

CXXFLAGS=-I. -I../include/visit -I../include @QT_CXXFLAGS@ @CXXFLAGS@
CPPFLAGS=-I. @CPPFLAGS@
MOC=@QT_MOC@

##
## Files...
##
HDRMOC = QvisVariablePopupMenu.h
HDR=VariableMenuPopulator.h WindowMetrics.h ${HDRMOC}
SRC=${HDR:.h=.C}
SRCMOC=${HDRMOC:.h=_moc.C}
OBJMOC=${SRCMOC:.C=.o}
OBJ=$(SRC:.C=.o) ${OBJMOC}

LIB=libwinutil
LIBS=-lqt -ldbatts -lstate -lcomm -lmisc -lavtexceptions -lutility -lparser
NOT_DISTRIB=

##
## Standard targets...
##
all: message $(LIBSHARED)

clean:
	$(RM) $(OBJ) $(LIBSHARED) $(SRCMOC)

##
## Other targets
##
message:
	@echo
	@echo "****************************************************************************"
	@echo "*** Building WinUtil Library ($(LIB))"
	@echo "****************************************************************************"

moc: $(SRCMOC)

##
## Source file specific rules
##
${SRCMOC}:
	${MOC} ${@:_moc.C=.h} > $@

##
## Automatic dependency stuff
##
@TARGETS@
@LIBTARGETS@
