##############################################################################

##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

# Libraries to use in prebinding. Some library has indirectly required the
# use of visit_vtk. Not good.
PREBIND_LIBS=-lvisit_vtk

LIBS= \
    -lexpr \
    -lparser \
    -lplugin \
    -lmdserverrpc \
    -lavtmath_ser \
    -lpipeline_ser \
    -ldatabase_ser \
    -lmir_ser \
    -ldbatts \
    -lavtexceptions \
    -lstate \
    -lcomm \
    -lmisc \
    -lutility \
    -llightweight_visit_vtk \
    @VTK_LIGHTWEIGHT_LIBS@ \
    @PREBIND_LIBS@ \
    $(BZIP2_LIBS) \
    @LIBS@ \
    @PTHREAD_LIB@
LIBDEP=
CPPFLAGS=@CPPFLAGS@ @PLATFORM_CPPFLAGS@
CXXFLAGS=@CXXFLAGS@ -I. -I../../include -I../../include/visit

##
## Files...
##
SRC=ChangeDirectoryRPCExecutor.C \
    CloseDatabaseRPCExecutor.C \
    ConnectRPCExecutor.C \
    ExpandPathRPCExecutor.C \
    GetDBPluginInfoRPCExecutor.C \
    GetDirectoryRPCExecutor.C \
    GetFileListRPCExecutor.C \
    GetMetaDataRPCExecutor.C \
    GetPluginErrorsRPCExecutor.C \
    GetSILRPCExecutor.C \
    KeepAliveRPCExecutor.C \
    LoadPluginsRPCExecutor.C \
    MDServerApplication.C \
    MDServerConnection.C \
    QuitRPCExecutor.C \
    LibPipelineStubs.C \
    main.C

OBJ=$(SRC:.C=.o)

## Source files for the test program
TESTSRC=testmds.C
TESTOBJ=testmds.o LibPipelineStubs.o

DISTRIB=


##
## Standard targets...
##
all: message $(tmpbin)/mdserver $(tmpbin)/testmds

install: install_bin

clean:
	$(RM) $(OBJ) $(TESTOBJ) $(tmpbin)/mdserver $(tmpbin)/testmds

##
## Other targets...
##
$(tmpbin)/mdserver: $(LIBDEP) $(OBJ)
	$(CXX) $(INCLUDE) -o $@ $(LDFLAGS) $(OBJ) $(LIBS)

purify: $(LIBDEP) $(OBJ)
	purify -cache-dir=$(TOPDIR)/lib -always-use-cache-dir $(CXX) $(INCLUDE) -o $(tmpbin)/mdserver $(LDFLAGS) $(OBJ) $(LIBS)

quantify: $(LIBDEP) $(OBJ)
	quantify $(CXX) $(INCLUDE) -o $(tmpbin)/mdserver $(LDFLAGS) $(OBJ) $(LIBS)

$(tmpbin)/testmds: $(LIBDEP) $(TESTOBJ)
	$(CXX) $(INCLUDE) -o $@ $(LDFLAGS) $(TESTOBJ) $(LIBS) -lmdserverproxy -lproxybase

install_bin: $(tmpbin)/mdserver
	$(INSTALL) $(tmpbin)/mdserver $(bindir)

message:
	@echo
	@echo "****************************************************************************"
	@echo "****************************************************************************"
	@echo "***"
	@echo "*** Building VisIt's Metadata Server ($(tmpbin)/mdserver)"
	@echo "***"
	@echo "****************************************************************************"
	@echo "****************************************************************************"

##
## Automatic dependency stuff
##
@TARGETS@
