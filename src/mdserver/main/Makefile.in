##############################################################################

##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

LIBS=-lplugin -lmdserverrpc -lavtmath_ser -lpipeline_ser -ldatabase_ser -ldbatts -lavtexceptions -lstate -lcomm -lmisc -lutility -lvisit_vtk @VTK_LIBS@ @LIBS@ @PTHREAD_LIB@ @X_LIBS@
LIBDEP=
CPPFLAGS=@CPPFLAGS@ @PLATFORM_CPPFLAGS@
CXXFLAGS=@CXXFLAGS@ -I. -I../../include -I../../include/visit

##
## Files...
##
SRC=ChangeDirectoryRPCExecutor.C GetMetaDataRPCExecutor.C ConnectRPCExecutor.C \
    MDServerApplication.C GetDirectoryRPCExecutor.C MDServerConnection.C \
    GetFileListRPCExecutor.C QuitRPCExecutor.C GetSILRPCExecutor.C \
    ExpandPathRPCExecutor.C CloseDatabaseRPCExecutor.C main.C

OBJ=$(SRC:.C=.o)

## Source files for the test program
TESTLIBS=-lmdserverproxy -lavtmath_ser -lpipeline_ser -lmdserverrpc -ldatabase_ser -lplugin -ldbatts -lavtexceptions -lproxybase -lmisc -lstate -lcomm -lutility -lvisit_vtk @VTK_LIBS@ @LIBS@ @PTHREAD_LIB@ @X_LIBS@
TESTSRC=testmds.C
TESTOBJ=testmds.o

DISTRIB=


##
## Standard targets...
##
all: message $(tmpbin)/mdserver $(tmpbin)/testmds

install: install_bin

clean:
	$(RM) $(OBJ) $(TESTOBJ) $(tmpbin)/mdserver $(tmpbin)/testmds

##
## Other targets...
##
$(tmpbin)/mdserver: $(LIBDEP) $(OBJ)
	$(CXX) $(INCLUDE) -o $@ $(LDFLAGS) $(OBJ) $(LIBS)

purify: $(LIBDEP) $(OBJ)
	purify $(CXX) $(INCLUDE) -o $(tmpbin)/mdserver $(LDFLAGS) $(OBJ) $(LIBS)

quantify: $(LIBDEP) $(OBJ)
	quantify $(CXX) $(INCLUDE) -o $(tmpbin)/mdserver $(LDFLAGS) $(OBJ) $(LIBS)

$(tmpbin)/testmds: $(LIBDEP) $(TESTOBJ)
	$(CXX) $(INCLUDE) -o $@ $(LDFLAGS) $(TESTOBJ) $(TESTLIBS)

install_bin: $(tmpbin)/mdserver
	$(INSTALL) $(tmpbin)/mdserver $(bindir)

message:
	@echo
	@echo "****************************************************************************"
	@echo "****************************************************************************"
	@echo "***"
	@echo "*** Building VisIt's Metadata Server ($(tmpbin)/mdserver)"
	@echo "***"
	@echo "****************************************************************************"
	@echo "****************************************************************************"

##
## Automatic dependency stuff
##
@TARGETS@
