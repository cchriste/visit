##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

CXXFLAGS=-I../../include -I../../include/visit @CXXFLAGS@
CPPFLAGS=-I. @CPPFLAGS@ 

##
## Files...
##
SRC=ChangeDirectoryRPC.C ChangeDirectoryException.C CloseDatabaseRPC.C \
    GetFileListRPC.C GetFileListException.C \
    GetDirectoryRPC.C ConnectRPC.C CreateGroupListRPC.C \
    ExpandPathRPC.C GetMetaDataRPC.C GetMetaDataException.C \
    GetSILRPC.C
HDR=ChangeDirectoryRPC.h ChangeDirectoryException.h CloseDatabaseRPC.h \
    ExpandPathRPC.h GetFileListRPC.h GetFileListException.h \
    GetDirectoryRPC.h ConnectRPC.h CreateGroupListRPC.h \
    GetMetaDataRPC.h GetMetaDataException.h GetSILRPC.h
OBJ=$(SRC:.C=.o)
LIB=libmdserverrpc
LIBS=-ldbatts -lmisc -lstate -lrpc


##
## Standard targets...
##
all: $(LIBSHARED)

clean:
	$(RM) $(LIBSHARED)
	$(RM) $(OBJ)

##
## Automatic dependency stuff
##
@TARGETS@
@LIBTARGETS@
