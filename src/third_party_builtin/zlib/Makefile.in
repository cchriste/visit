##############################################################################
##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

CPPFLAGS=-I. -I../../include @CPPFLAGS@
#CFLAGS=@CFLAGS@ -O3 -DZ_PREFIX
CFLAGS=@CFLAGS@ -O3
LIBS=

##
## Files...
##
SRC=adler32.c compress.c crc32.c gzio.c uncompr.c deflate.c trees.c \
    zutil.c inflate.c infback.c inftrees.c inffast.c
HDR=crc32.h  deflate.h  inffast.h  inffixed.h  inflate.h  inftrees.h  \
    trees.h  zconf.h  zlib.h  zutil.h
OBJ=$(SRC:.c=.o)
LIB=libz

##
## Standard targets...
##
all: message $(LIBSHARED)

##
## Remove all the sources we untarred
##
clean_untarred_sources:
	$(RM) $(SRC) $(HDR) ChangeLog ../../include/visit/{zlib.h,zconf.h}

clean: clean_untarred_sources
	$(RM) $(OBJ) $(LIBSHARED)

zlib.h:
	gunzip < zlib-1.2.3.v.tar.gz | tar xvf -
	cp zlib.h zconf.h ../../include/visit/.
	touch zlib.h

adler32.c: zlib.h
compress.c: zlib.h
crc32.c: zlib.h
gzio.c: zlib.h
uncompr.c: zlib.h
deflate.c: zlib.h
trees.c: zlib.h
zutil.c: zlib.h
inflate.c: zlib.h
infback.c: zlib.h
inftrees.c: zlib.h
inffast.c: zlib.h

##
## Other targets
##
message:
	@echo
	@echo "****************************************************************************"
	@echo "*** Building zlib Library ($(LIB))"
	@echo "****************************************************************************"

##
## Automatic dependency stuff
##
@TARGETS@
@LIBTARGETS@
