##############################################################################
##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

CPPFLAGS=-I. -I../../include -I../../include/visit @CPPFLAGS@ @VTK_INCLUDES@
LIBS=

##
## Files...
##
SRC=bow.C fwav.C gzlib.C
HDR=$(SRC:.C=.h)
OBJ=$(SRC:.C=.o)
LIB=libbow

##
## Standard targets...
##
all: message $(LIBSHARED)

clean:
	$(RM) $(OBJ) $(LIBSHARED) ../../include/visit/{bow.h,fwav.h,gzlib.h}

../../include/visit/gzlib.h: gzlib.h
	cd ../../include/visit; \
	ln -s ../../third_party_builtin/bow/gzlib.h .

../../include/visit/fwav.h: fwav.h
	cd ../../include/visit; \
	ln -s ../../third_party_builtin/bow/fwav.h .

../../include/visit/bow.h: bow.h
	cd ../../include/visit; \
	ln -s ../../third_party_builtin/bow/bow.h .

gzlib.C: ../../include/visit/gzlib.h

fwav.C: ../../include/visit/fwav.h

bow.C: ../../include/visit/bow.h

##
## Other targets
##
message:
	@echo
	@echo "****************************************************************************"
	@echo "*** Building BOW Library ($(LIB))"
	@echo "****************************************************************************"

##
## Automatic dependency stuff
##
@TARGETS@
@LIBTARGETS@
