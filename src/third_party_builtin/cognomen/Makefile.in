##############################################################################

##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

CFLAGS=-Icognomen/include -I../../include -DIN_COGNOMEN @CFLAGS@
CXXFLAGS=-Icognomen/include @CXXFLAGS@
CPPFLAGS=-Icognomen/include @CPPFLAGS@
LIBS=$(MPI_LIBS)

##
## Files...
##
SRC=src/cognomen.c
HDR=src/cognomen.h
OBJ=$(SRC:.c=_par.o)
LIB=libcognomen

##
## Standard targets...
##
all: message ../../include/cognomen $(LIBSHARED)

clean:
	$(RM) $(OBJ) $(LIBSHARED) credits.html

../../include/cognomen:
	cd ../../include && \
		ln -sf ../third_party_builtin/cognomen/src cognomen

##
## Other targets
##
message:
	@echo
	@echo "****************************************************************************"
	@echo "*** Building Cognomen Library ($(LIB))"
	@echo "****************************************************************************"

##
## Automatic dependency stuff
##
@TARGETS@
@LIBTARGETS@
