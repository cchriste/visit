##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@
@MPI_CC@
@MPI_CXX@

##
## Files...
##
SRC=vtkParallelImageSpaceRedistributor.C

CPPFLAGS=@VISIT_VTK_CPPFLAGS@ @CPPFLAGS@ -I.

SEROBJ=$(SRC:.C=.o)
PAROBJ=$(SRC:.C=_par.o)
LIB=libparallel_visit_vtk
LIBS=-lmisc -lvisit_vtk -llightweight_visit_vtk -lavtexceptions 
SERLIBS=$(LIBS) @VTK_LIBS@ $(X_LIBS)
PARLIBS=$(LIBS) @VTK_LIBS@ $(X_LIBS)

##
## Standard targets...
##
all: message $(LIBSHAREDSER) @LIBSHAREDPAR@

clean:
	$(RM) $(SEROBJ) $(PAROBJ) $(LIBSHAREDSER) @LIBSHAREDPAR@

##
## Other targets...
##
message:
	@echo
	@echo "****************************************************************************"
	@echo "*** Building visit_vtk Library ($(LIB))"
	@echo "****************************************************************************"

##
## Automatic dependency stuff
##
@TARGETS@
@PARLIBTARGETS@
