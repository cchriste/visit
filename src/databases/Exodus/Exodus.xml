<?xml version="1.0"?>
  <!-- We'd really like to just use the vtkExodusII reader code in VTK. However,
       that introduces all sorts of issues with the build of VTK and the 3rd
       party libraries, ExodusII and NetCDF, and VTK's NetCDF colliding with
       the NetCDF installation all other VisIt DB plugins use. And, VTK can't be
       told a NetCDF installation of our choosing. So, we wind up copying their
       reader code into our source tree. -->
  <Plugin name="Exodus" label="Exodus" type="database" dbtype="MTSD" version="1.0">
    <FilePatterns>
    *.ex
    *.e
    *.exo
    *.ex2
    *.exii
    *.gen
    *.exoii
    *.exodus
    *.nemesis
    </FilePatterns>
    <Files components="M,E">
      avtExodusFileFormat.C
    </Files>
    <CXXFLAGS>
      ${NETCDF_INCLUDE_DIR}
      ${BOOST_INCLUDE_DIR}
    </CXXFLAGS>
    <LDFLAGS>
      ${NETCDF_LIBRARY_DIR}
    </LDFLAGS>
    <LIBS>
      ${NETCDF_LIB}
    </LIBS>
    <Attribute name="" purpose="" persistent="true" exportAPI="" exportInclude="" codefile="Exodus.code">
      <Function name="ExodusCommonPluginInfo::SetupDatabase" user="false" member="true">
      </Function>
    </Attribute>
  </Plugin>
