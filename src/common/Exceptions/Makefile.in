@SET_MAKE@
@VARIABLES@

SUBDIRS_DBIO_ONLY=Database Pipeline
SUBDIRS_STD=Database Pipeline Plotter VisWindow
SUBDIRS=@SUBDIRS@

SRC_DBIO_ONLY=$(Database_src) $(Pipeline_src)
SRC_STD=$(Database_src) $(Pipeline_src) $(Plotter_src) $(VisWindow_src)
SRC=@SRC@

Database_src= \
  Database/BadPermissionException.C \
  Database/FileDoesNotExistException.C \
  Database/InvalidDBTypeException.C \
  Database/InvalidFilesException.C \
  Database/InvalidSourceException.C \
  Database/InvalidTimeStepException.C \
  Database/InvalidVariableException.C \
  Database/InvalidZoneTypeException.C \
  Database/PointerNotInCacheException.C \
  Database/SiloException.C

Pipeline_src= \
  Pipeline/AbortException.C \
  Pipeline/BadCellException.C \
  Pipeline/BadDomainException.C \
  Pipeline/BadIndexException.C \
  Pipeline/BadNodeException.C \
  Pipeline/BadVectorException.C \
  Pipeline/ExpressionException.C \
  Pipeline/GhostCellException.C \
  Pipeline/ImproperUseException.C \
  Pipeline/IncompatibleDomainListsException.C \
  Pipeline/IntervalTreeNotCalculatedException.C \
  Pipeline/InvalidCategoryException.C \
  Pipeline/InvalidCellTypeException.C \
  Pipeline/InvalidDimensionsException.C \
  Pipeline/InvalidLimitsException.C \
  Pipeline/InvalidSetException.C \
  Pipeline/InvalidMergeException.C \
  Pipeline/LogicalIndexException.C \
  Pipeline/NoCurveException.C \
  Pipeline/NoDefaultVariableException.C \
  Pipeline/NoInputException.C \
  Pipeline/NonQueryableInputException.C \
  Pipeline/StubReferencedException.C \
  Pipeline/UnexpectedValueException.C

Plotter_src= \
  Plotter/InvalidColortableException.C


CPPFLAGS=@COMPONENT_CPPFLAGS@ @SILO_INCLUDE@ @CPPFLAGS@

OBJ=$(SRC:.C=.o)
LIB=libavtexceptions
LIBS=-lmisc

##
## Standard targets...
##
all: $(LIBSHARED)

clean:
	$(RM) $(OBJ) $(LIBSHARED)

##
## Automatic dependency stuff
##
@TARGETS@
@LIBTARGETS@
