##############################################################################

##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

CXXFLAGS=-I. -I../../include/visit -I../../include @CXXFLAGS@
CPPFLAGS=-I. @CPPFLAGS@

##
## Files...
##
TESTPROG1=testparser
TESTSRC1=testparser.C
COMMONSRC = \
    ConfiguratingItem.C \
    ConfiguratingSet.C \
    Grammar.C \
    ParseTreeNode.C \
    Parser.C \
    Rule.C \
    Sequence.C \
    Symbol.C \
    Token.C \
    TokenParseTreeNode.C
LIBSRC =
SRC=${LIBSRC} ${COMMONSRC}
OBJ=$(SRC:.C=.o)
COMMONOBJ=${COMMONSRC:.C=.o}
TESTOBJ1=$(TESTSRC1:.C=.o)
LIB=libparser
NOT_DISTRIB=
LIBS=-L../../lib -lmisc -lstate -lcomm -lutility @LIBS@

##
## Standard targets...
##
all: message $(LIBSHARED)

clean:
	$(RM) $(OBJ) $(LIBSHARED)

##
## Intermediate targets...
##
##
## Test targets...
##
$(TESTPROG1) test: $(TESTOBJ1) $(LIBSHARED)
	$(CXX) -o $(TESTPROG1) $(LDFLAGS) -lparser $(TESTOBJ1) @LIBS@


##
## Other targets
##
message:
	@echo
	@echo "****************************************************************************"
	@echo "*** Building Parser Library ($(LIB))"
	@echo "****************************************************************************"

##
## Automatic dependency stuff
##
@TARGETS@
@LIBTARGETS@
