HDR=$(SRC:.C=.h)
OBJ=$(SRC:.C=.o)
LIB=libstate
LIBS=-lcomm -lmisc -lutility
NOT_DISTRIB=

TSTPROG=test1 test2 test3
TSTOBJ=$(TSTPROG:=.o) TestUtil.o

##
## Standard targets...
##
all: message $(LIBSHARED)

clean:
	$(RM) $(LIBSHARED) $(OBJ) $(TSTOBJ) $(TSTPROG)

##
## Other targets
##
message:
	@echo
	@echo "****************************************************************************"
	@echo "*** Building State Library ($(LIB))"
	@echo "****************************************************************************"

test:
	@echo "****************************************************************************"
	@echo "TESTING /common/state"
	@echo "****************************************************************************"
	$(RM) test_log
	@echo "Building tests..." | tee -a test_log
	$(MAKE) test1 && ./test1 | tee -a test_log
	$(MAKE) test2 && ./test2 | tee -a test_log
	$(MAKE) test3 && ./test3 | tee -a test_log

test1: $(OBJ) test1.o TestUtil.o TestUtil.h
	$(CXX) -o test1 $(CXXFLAGS) $(CPPFLAGS) -I../../include -L../../lib \
               test1.o TestUtil.o $(OBJ) -lrpc -lcomm

test2: $(OBJ) test2.o TestUtil.o TestUtil.h
	$(CXX) -o test2 $(CXXFLAGS) $(CPPFLAGS) -I../../include -L../../lib \
               test2.o TestUtil.o $(OBJ) -lrpc -lcomm

test3: $(OBJ) test3.o TestUtil.o TestUtil.h
	$(CXX) -o test3 $(CXXFLAGS) $(CPPFLAGS) -I../../include -L../../lib \
		test3.o TestUtil.o $(OBJ) -lrpc -lcomm

##
## Automatic dependency stuff
##
@TARGETS@
@LIBTARGETS@
