##############################################################################

##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

CPPFLAGS=-I. -I../../include @CPPFLAGS@ @VTK_INCLUDES@ @SILO_INCLUDE@
LIBS=

##
## Files...
##
SRC=AtomicProperties.C CoordUtils.C NamingConvention.C StringHelpers.C Utility.C\
    void_ref_ptr.C
HDR=AtomicProperties.h BJHash.h NamingConvention.h StringHelpers.h Utility.h\
    ref_ptr.h array_ref_ptr.h void_ref_ptr.h
OBJ=$(SRC:.C=.o)
LIB=libutility

TESTSRC=MRUCache_test.C StringHelpers_test.C
TESTOBJ=$(TESTSRC:.C=.o)

##
## Standard targets...
##
all: message $(LIBSHARED) $(tmpbin)/MRUCache_test $(tmpbin)/StringHelpers_test

clean:
	$(RM) $(OBJ) $(LIBSHARED) $(TESTOBJ)

##
## Other targets
##
message:
	@echo
	@echo "****************************************************************************"
	@echo "*** Building Utility Library ($(LIB))"
	@echo "****************************************************************************"

$(tmpbin)/MRUCache_test: MRUCache_test.o $(LIBSHARED)
	$(CXX) $(INCLUDE) -o $@ $(LDFLAGS) MRUCache_test.o

$(tmpbin)/StringHelpers_test: StringHelpers_test.o $(LIBSHARED)
	$(CXX) $(INCLUDE) -o $@ $(LDFLAGS) StringHelpers_test.o -lutility

##
## Automatic dependency stuff
##
@TARGETS@
@LIBTARGETS@
