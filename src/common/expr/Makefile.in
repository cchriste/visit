##############################################################################

##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

CXXFLAGS=-I. -I../../include/visit -I../../include @CXXFLAGS@
CPPFLAGS=-I. @CPPFLAGS@

##
## Files...
##
CONFIGPROG=exprconfig
TESTPROG1=parse
TESTSRC1=test.C
COMMONSRC = \
    ExprGrammar.C \
    ExprParseTreeNode.C \
    ExprNode.C \
    ExprParser.C \
    ExprScanner.C \
    InvalidExpressionException.C \
    ParsingExprList.C \
    RecursiveExpressionException.C
CONFIGSRC = ExprConfig.C
INITSRC=ExprInit.C
INITOBJ=${INITSRC:.C=.o}
LIBSRC = \
    ExprInit.C
SRC=${LIBSRC} ${COMMONSRC}
OBJ=$(SRC:.C=.o)
CONFIGOBJ=$(CONFIGSRC:.C=.o)
COMMONOBJ=${COMMONSRC:.C=.o}
CONFIGOBJ=${CONFIGSRC:.C=.o}
TESTOBJ1=$(TESTSRC1:.C=.o)
LIB=libexpr
NOT_DISTRIB=
LIBS=-L../../lib -lmisc -lstate -lcomm -lutility -lparser -lavtexceptions @LIBS@

##
## Standard targets...
##
all: message $(LIBSHARED)

clean:
	$(RM) $(OBJ) $(LIBSHARED)

##
## Intermediate targets...
##
.NO_DO_FOR_SIBLING:  $(INITSRC)
.NO_CONFIG_REC:      $(INITSRC)
.NO_WINK_IN:         $(INITSRC)
$(INITSRC):
	./$(CONFIGPROG) $(INITSRC)

init: $(CONFIGPROG)
	env LD_LIBRARY_PATH=../../lib:${LD_LIBRARY_PATH} ./$(CONFIGPROG) $(INITSRC)

$(CONFIGPROG): $(COMMONOBJ) $(CONFIGOBJ)
	$(CXX) -o $@ $(LDFLAGS) $(COMMONOBJ) $(CONFIGOBJ) -lparser $(LIBS) @PTHREAD_LIB@

##
## Test targets...
##
$(TESTPROG1) test: $(INITOBJ) $(TESTOBJ1) $(LIBSHARED)
	$(CXX) -o $(TESTPROG1) $(LDFLAGS) -lexpr -lparser $(TESTOBJ1) $(LIBS) @PTHREAD_LIB@


##
## Other targets
##
message:
	@echo
	@echo "****************************************************************************"
	@echo "*** Building VisIt Expression Library ($(LIB))"
	@echo "****************************************************************************"

##
## Automatic dependency stuff
##
@TARGETS@
@LIBTARGETS@
