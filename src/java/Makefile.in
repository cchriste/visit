MAIN_CLASS = $(MAIN_SRC:.java=.class)

VERSIONWRITER = versionwriter
OBJ = VersionWriter.o

JARFILE=visit.jar

##
## Standard targets...
##

all: package

install: install_bin

clean:
	$(RM) $(JARFILE) $(MAIN_CLASS) $(INSTDIR)/*.class
	$(RM) $(OBJ) $(VERSIONWRITER)

##
## Other targets...
##
$(VERSIONWRITER): $(OBJ)
	$(CXX) -o ${VERSIONWRITER} $(CXXFLAGS) $(OBJ)

version: $(VERSIONWRITER)
	./$(VERSIONWRITER)

package:
	$(JAVAC) -d . $(JAVAFLAGS) $(PACKAGE_SRC) $(PACKAGE_STATE_SRC) $(METADATA_SRC)

main:
	$(JAVAC) $(JAVAFLAGS) $(MAIN_SRC)

jar: package
	$(JAR) cvf $(JARFILE) llnl 

javadoc:
	$(RM) -rf docs
	mkdir docs
	javadoc -d docs $(PACKAGE_SRC) $(PACKAGE_STATE_SRC) $(METADATA_SRC)
	cp stylesheet.css docs

pack: jar main javadoc
	$(RM) jvisit.tar
	$(RM) -rf src
	mkdir src
	mkdir src/plots
	mkdir src/operators
	cp *.java src
	cp Makefile src
	cp ../plots/*/*.java src/plots
	cp ../operators/*/*.java src/operators
	tar -cf jvisit.tar $(JARFILE) src docs $(MAIN_CLASS) images
	$(RM) -rf src

##
## Automatic dependency stuff
##
@TARGETS@
@LIBTARGETS@
