##############################################################################

##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

##
## Files...
##
SRC=PyAnnotationAttributes.C \
PyHostProfile.C \
PyKeyframeAttributes.C \
PyMaterialAttributes.C \
PyPickAttributes.C \
PyPrinterAttributes.C \
PyRenderingAttributes.C \
PySaveWindowAttributes.C \
PySILRestriction.C \
PyViewAttributes.C \
PyWindowInformation.C \
visitmodule.C

HDR=PyAnnotationAttributes.h \
PyHostProfile.h \
PyKeyframeAttributes.h \
PyMaterialAttributes.h \
PyPickAttributes.h \
PyPrinterAttributes.h \
PyRenderingAttributes.h \
PySaveWindowAttributes.h \
PySILRestriction.h \
PyViewAttributes.h \
PyWindowInformation.h

OBJ=$(SRC:.C=.o)
LIB=visitmodule
LIBNAME=$(LIB).so
CLI=$(tmpbin)/cli

##
## Override the certain variables with values from configure.
##
LDFLAGS=-L../lib -L/usr/local/lib @PY_LDFLAGS@ @LDFLAGS@
LIBS=@LIBS@ -lviewerproxy -lviewerrpc -lcomm -lmisc -lstate -lutility -lplugin -ldbatts -lavtexceptions @PY_LIB@
CXXFLAGS=@CXXFLAGS@ @PY_CXXFLAGS@ -I. -I../include/visit


##
## Standard targets...
##
all:  message $(CLI) $(LIBSHARED)
	$(RM) ../bin/$(LIBNAME)
	mv $(LIBSHARED) ../bin/$(LIBNAME)

$(CLI): $(OBJ) cli.o
	$(CXX) -o $@ $(CXXFLAGS) $(LDFLAGS) $(OBJ) cli.o @PY_CLI_LIB@ $(LIBS)

pure: $(OBJ) cli.o
	purify $(CXX) -o $(CLI) $(CXXFLAGS) $(LDFLAGS) $(OBJ) cli.o @PY_CLI_LIB@ $(LIBS)

clean:
	$(RM) $(LIBSTATIC) $(LIBSHARED) ../bin/$(LIBNAME) $(CLI)
	$(RM) $(OBJ) cli.o

message:
	@echo
	@echo "****************************************************************************"
	@echo "****************************************************************************"
	@echo "***"
	@echo "*** Building VisIt's Scripting Interface ($(tmpbin)/cli)"
	@echo "***"
	@echo "****************************************************************************"
	@echo "****************************************************************************"

##
## Automatic dependency stuff
##
@TARGETS@
@LIBTARGETS@
