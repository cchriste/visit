##############################################################################

##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

LIBS=-lvclrpc -lstate -lcomm -lmisc -lutility @LIBS@ @PTHREAD_LIB@
LIBDEP=
CPPFLAGS=@CPPFLAGS@ @PLATFORM_CPPFLAGS@
CXXFLAGS=@CXXFLAGS@ -I. -I../../include -I../../include/visit

##
## Files...
##
SRC=LauncherApplication.C main.C

OBJ=$(SRC:.C=.o)

DISTRIB=


##
## Standard targets...
##
all: message $(tmpbin)/vcl

install: install_bin

clean:
	$(RM) $(OBJ) $(TESTOBJ) $(tmpbin)/vcl

##
## Other targets...
##
$(tmpbin)/vcl: $(LIBDEP) $(OBJ)
	$(CXX) $(INCLUDE) -o $@ $(LDFLAGS) $(OBJ) $(LIBS)

purify: $(LIBDEP) $(OBJ)
	purify $(CXX) $(INCLUDE) -o $(tmpbin)/vcl $(LDFLAGS) $(OBJ) $(LIBS)

quantify: $(LIBDEP) $(OBJ)
	quantify $(CXX) $(INCLUDE) -o $(tmpbin)/vcl $(LDFLAGS) $(OBJ) $(LIBS)

install_bin: $(tmpbin)/vcl
	$(INSTALL) $(tmpbin)/vcl $(bindir)

message:
	@echo
	@echo "****************************************************************************"
	@echo "****************************************************************************"
	@echo "***"
	@echo "*** Building VisIt's Component Launcher ($(tmpbin)/vcl)"
	@echo "***"
	@echo "****************************************************************************"
	@echo "****************************************************************************"

##
## Automatic dependency stuff
##
@TARGETS@
