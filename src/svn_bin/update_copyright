#!/bin/sh
#
# You should do this in both the src and data directories. You might also
# just do a find over all file names when you are finished for "2000 - 2011"
# to check if you missed any files.
#
find -type f -name "*.c" -exec sed -i "s/Copyright (c) 2000 - 2013, Lawrence Livermore National Security, LLC/Copyright (c) 2000 - 2014, Lawrence Livermore National Security, LLC/" {} \; -print
find -type f -name "*.C" -exec sed -i "s/Copyright (c) 2000 - 2013, Lawrence Livermore National Security, LLC/Copyright (c) 2000 - 2014, Lawrence Livermore National Security, LLC/" {} \; -print
find -type f -name "*.h" -exec sed -i "s/Copyright (c) 2000 - 2013, Lawrence Livermore National Security, LLC/Copyright (c) 2000 - 2014, Lawrence Livermore National Security, LLC/" {} \; -print
find -type f -name "*.f" -exec sed -i "s/Copyright (c) 2000 - 2013, Lawrence Livermore National Security, LLC/Copyright (c) 2000 - 2014, Lawrence Livermore National Security, LLC/" {} \; -print
find -type f -name "*.java" -exec sed -i "s/Copyright (c) 2000 - 2013, Lawrence Livermore National Security, LLC/Copyright (c) 2000 - 2014, Lawrence Livermore National Security, LLC/" {} \; -print
find -type f -name "*.cmake" -exec sed -i "s/Copyright (c) 2000 - 2013, Lawrence Livermore National Security, LLC/Copyright (c) 2000 - 2014, Lawrence Livermore National Security, LLC/" {} \; -print
find -type f -name "*.txt" -exec sed -i "s/Copyright (c) 2000 - 2013, Lawrence Livermore National Security, LLC/Copyright (c) 2000 - 2014, Lawrence Livermore National Security, LLC/" {} \; -print
find -type f -name "*.in" -exec sed -i "s/Copyright (c) 2000 - 2013, Lawrence Livermore National Security, LLC/Copyright (c) 2000 - 2014, Lawrence Livermore National Security, LLC/" {} \; -print
find -type f -name "*.py" -exec sed -i "s/Copyright (c) 2000 - 2013, Lawrence Livermore National Security, LLC/Copyright (c) 2000 - 2014, Lawrence Livermore National Security, LLC/" {} \; -print
find -type f -name "*.sh" -exec sed -i "s/Copyright (c) 2000 - 2013, Lawrence Livermore National Security, LLC/Copyright (c) 2000 - 2014, Lawrence Livermore National Security, LLC/" {} \; -print
find -type f -name "*.cxx" -exec sed -i "s/Copyright (c) 2000 - 2013, Lawrence Livermore National Security, LLC/Copyright (c) 2000 - 2014, Lawrence Livermore National Security, LLC/" {} \; -print
find -type f -name "*.hxx" -exec sed -i "s/Copyright (c) 2000 - 2013, Lawrence Livermore National Security, LLC/Copyright (c) 2000 - 2014, Lawrence Livermore National Security, LLC/" {} \; -print
