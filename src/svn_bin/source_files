if  (! -d "src")
{
   die "invoke $0 from the root of the VisIt source tree\n";
}


sub get ($@)
{
    my ($dir, $recursearg) = @_;
    @tmpfiles = `svn status -v $recursearg $dir | grep -v '^?' | tr -s ' ' | cut -d' ' -f5 | grep -v -x \.`;
    my @files = ();
    foreach (@tmpfiles)
    {
        chomp;
        push @files, "$_";
    }
    return @files
}

sub get_svn_recursive ($@)
{
    my ($dir) = @_;
    return get($dir, "");
}

sub get_svn_norecursive ($@)
{
    my ($dir) = @_;
    return get($dir, "-N");
}

sub get_norecursive ($@)
{
    my ($files) = @_;
    @tmpfiles = `ls $files | egrep -v /\$`;
    my @files = ();
    foreach (@tmpfiles)
    {
        chomp;
        push @files, "$_";
    }
    return @files
}


@files = ();

if ($ARGV[0] eq "-dbio-only")
{
