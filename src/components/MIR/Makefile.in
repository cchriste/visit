##############################################################################

@SET_MAKE@
@VARIABLES@

SUBDIRS=Base Tet Zoo
SRC=$(Base_src) $(Tet_src) $(Zoo_src)

Base_src= \
  Base/MIR.C \
  Base/MIRConnectivity.C \
  Base/MIROptions.C
Tet_src= \
  Tet/Edge.C \
  Tet/Face.C \
  Tet/MaterialTetrahedron.C \
  Tet/MaterialTriangle.C \
  Tet/QuadraticHash.C \
  Tet/Tetrahedralizer.C \
  Tet/TetMIR.C \
  Tet/Triangulator.C \
  Tet/mat3d_tet.C
Zoo_src= \
  Zoo/BitUtils.C \
  Zoo/CellReconstructor.C \
  Zoo/ResampledMat.C \
  Zoo/ZooMIR.C

CPPFLAGS=-I../../include @COMPONENT_CPPFLAGS@ @CPPFLAGS@

OBJ=$(SRC:.C=.o)
LIB=libmir
LIBS=-ldbatts -lpipeline_ser -lavtmath_ser -lavtexceptions -lstate -lutility -lmisc -lcomm -lexpr -lparser -llightweight_visit_vtk $(VTK_LIBS)

##
## Standard targets...
##
all: $(LIBSHARED)

clean:
	$(RM) $(LIBSHARED)
	$(RM) $(OBJ)

##
## Nonstandard stuff for material tables
##
.NO_CONFIG_REC:  mat3d_tet.h mat3d_tet.C Tet/mat3d_tet.h Tet/mat3d_tet.C
.NO_WINK_IN:  mat3d_tet.h mat3d_tet.C Tet/mat3d_tet.h Tet/mat3d_tet.C
.NO_DO_FOR_SIBLING: mat3d_tet.h mat3d_tet.C Tet/mat3d_tet.h Tet/mat3d_tet.C
mat3d_tet Tet/mat3d_tet.h Tet/mat3d_tet.C:  Tet/mat3d_tables.C
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(LDFLAGS) Tet/mat3d_tables.C -o mat3d_tables
	rm -f Tet/mat3d_tet.h Tet/mat3d_tet.C
	./mat3d_tables
	mv mat3d_tet.h Tet/mat3d_tet.h
	mv mat3d_tet.C Tet/mat3d_tet.C

##
## Automatic dependency stuff
##
@TARGETS@
@LIBTARGETS@
