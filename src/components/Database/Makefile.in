@SET_MAKE@
@VARIABLES@

SUBDIRS=Database Ghost Formats MIR
SRC=$(Database_src) $(Ghost_src) $(Formats_src) $(MIR_src)

Database_src= \
  Database/avtDatabase.C \
  Database/avtDatabaseFactory.C \
  Database/avtDatasetCollection.C \
  Database/avtDatasetDatabase.C \
  Database/avtFileDescriptorManager.C \
  Database/avtGenericDatabase.C \
  Database/avtIOInformation.C \
  Database/avtSILGenerator.C \
  Database/avtSourceFromDatabase.C \
  Database/avtVariableCache.C
Formats_src= \
  Formats/avtFileFormat.C \
  Formats/avtFileFormatInterface.C \
  Formats/avtMTSDFileFormat.C \
  Formats/avtMTSDFileFormatInterface.C \
  Formats/avtMTMDFileFormat.C \
  Formats/avtMTMDFileFormatInterface.C \
  Formats/avtSTMDFileFormat.C \
  Formats/avtSTMDFileFormatInterface.C \
  Formats/avtSTSDFileFormat.C \
  Formats/avtSTSDFileFormatInterface.C
Ghost_src= \
  Ghost/StructuredBoundary.C \
  Ghost/avtDomainBoundaries.C \
  Ghost/avtStructuredDomainBoundaries.C
MIR_src= \
  MIR/Edge.C \
  MIR/Face.C \
  MIR/MIR.C \
  MIR/MIROptions.C \
  MIR/MaterialTetrahedron.C \
  MIR/MaterialTriangle.C \
  MIR/QuadraticHash.C \
  MIR/Tetrahedralizer.C \
  MIR/Triangulator.C \
  MIR/mat3d_tet.C


CPPFLAGS=-I../../include @COMPONENT_CPPFLAGS@ @CPPFLAGS@

SEROBJ=$(SRC:.C=_ser.o)
PAROBJ=$(SRC:.C=_par.o)
LIB=libdatabase
SERLIBS=-ldbatts -lpipeline_ser -lavtexceptions -lstate -lutility -lmisc @VTK_LIBS@
PARLIBS=-ldbatts -lpipeline_par -lavtexceptions -lstate -lutility -lmisc @VTK_LIBS@ @SHLIB_MPI_LIBS@

##
## Standard targets...
##
all: $(LIBSHAREDSER) @LIBSHAREDPAR@

clean:
	$(RM) $(LIBSHAREDSER) @LIBSHAREDPAR@
	$(RM) $(SEROBJ) $(PAROBJ)

##
## Nonstandard stuff for material tables
##
.NO_CONFIG_REC:  mat3d_tet.h mat3d_tet.C MIR/mat3d_tet.h MIR/mat3d_tet.C
.NO_WINK_IN:  mat3d_tet.h mat3d_tet.C MIR/mat3d_tet.h MIR/mat3d_tet.C
.NO_DO_FOR_SIBLING: mat3d_tet.h mat3d_tet.C MIR/mat3d_tet.h MIR/mat3d_tet.C
mat3d_tet MIR/mat3d_tet.h MIR/mat3d_tet.C:  MIR/mat3d_tables.C
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(LDFLAGS) MIR/mat3d_tables.C -o mat3d_tables
	rm -f MIR/mat3d_tet.h MIR/mat3d_tet.C
	./mat3d_tables
	mv mat3d_tet.h MIR/mat3d_tet.h
	mv mat3d_tet.C MIR/mat3d_tet.C

##
## Automatic dependency stuff
##
@TARGETS@
@PARLIBTARGETS@
