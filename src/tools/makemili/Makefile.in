##############################################################################

##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@
@MPI_CC@
@MPI_CXX@

CPPFLAGS=-I. -I../../include @MILI_FLAGS@ @CPPFLAGS@

SERLIBS=@MILI_LIBS@
PARLIBS=@MILI_LIBS@ @MPI_LIBS@ @PTHREAD_LIB@
LIBDEP=

##
## Files...
##
SRC=MakeMili.C
SEROBJ=$(SRC:.C=.o)
PAROBJ=$(SRC:.C=_par.o)


##
## Standard targets...
##
all: $(LIB) @MAKEMILI_SER@ @MAKEMILI_PAR@

clean:
	$(RM) $(SEROBJ) $(PAROBJ) @MAKEMILI_SER@ @MAKEMILI_PAR@

##
## Other targets...
##
@MAKEMILI_SER@ or_no_ser: $(LIBDEP) $(SEROBJ)
	$(CXX) -o $@ $(SEROBJ) $(LDFLAGS) $(SERLIBS)

@MAKEMILI_PAR@ or_no_par: $(LIBDEP) $(PAROBJ)
	$(CXX) -o $@ $(PAROBJ) $(LDFLAGS) $(PARLIBS) @MPI_LIBS@

##
## Automatic dependency stuff
##
@TARGETS@
