##############################################################################

##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@
@MPI_CC@
@MPI_CXX@

CPPFLAGS=-I. -I../../include -I../../include/visit

SERLIBS=-L../../lib -ldatabase_ser -lpipeline_ser -lexpressions_ser -lavtfilters_ser -lavtview -lavtddf_ser -lexpr -lparser -lvisit_vtk -llightweight_visit_vtk -lutility -lmisc -lcomm -lstate -ldbatts -lavtmath_ser -lavtexceptions -lmir_ser -lplugin @VTK_LIBS@ $(X_LIBS) $(BZIP2_LIBS) @LIBS@ @PTHREAD_LIB@
PARLIBS=-L../../lib -ldatabase_par -lpipeline_par -lexpressions_par -lavtfilters_par -lavtview -lavtddf_par -lexpr -lparser -lvisit_vtk -llightweight_visit_vtk -lutility -lmisc -lcomm -lstate -ldbatts -lavtmath_par -lavtexceptions -lmir_par -lplugin @VTK_LIBS@ $(X_LIBS) $(BZIP2_LIBS) @LIBS@ @MPI_LIBS@ @PTHREAD_LIB@
LIBDEP=

##
## Files...
##
SRC=convert.C
SEROBJ=$(SRC:.C=.o)
PAROBJ=$(SRC:.C=_par.o)


##
## Standard targets...
##
all: $(LIB) @CONVERT_SER@ @CONVERT_PAR@

clean:
	$(RM) $(SEROBJ) $(PAROBJ) @CONVERT_SER@ @CONVERT_PAR@

##
## Other targets...
##
@CONVERT_SER@ or_no_ser: $(LIBDEP) $(SEROBJ)
	$(CXX) -o $@ $(SEROBJ) $(LDFLAGS) $(SERLIBS)

@CONVERT_PAR@ or_no_par: $(LIBDEP) $(PAROBJ)
	$(CXX) -o $@ $(PAROBJ) $(LDFLAGS) $(PARLIBS) @MPI_LIBS@

##
## Automatic dependency stuff
##
@TARGETS@
