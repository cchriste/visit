##############################################################################


# Programs and options
# --------------------
@SET_MAKE@
@VARIABLES@
LIBS=@QT_LIBS@ $(SILO_LIB) $(X_LIBS) @LIBS@
LDFLAGS=@QT_LDFLAGS@ @LDFLAGS@ 
LIBDEP=
CXXFLAGS=@CXXFLAGS@ @QT_CXXFLAGS@
CPPFLAGS=@CPPFLAGS@ @SILO_INCLUDE@ -I$(TOPDIR)/include/visit -I.

MOC=@QT_MOC@

# Files
# -----
HDRMOC = Explorer.h \
         SiloView.h \
         SiloDirView.h \
         SiloDirTreeView.h \
         SiloArrayView.h \
         SiloValueView.h \
         SiloObjectView.h

HDR    = $(HDRMOC) \
         SiloFile.h

SRC    = $(HDRMOC:.h=.C) \
         SiloFile.C \
         main.C 

# Derived objects
# ---------------
SRCMOC=$(HDRMOC:.h=_moc.C)
OBJMOC=$(SRCMOC:.C=.o)

OBJ=$(SRC:.C=.o) $(OBJMOC)
DISTRIB=


# Standard targets
# ----------------
all: $(tmpbin)/silex

install: install_bin

clean:
	$(RM) $(OBJ) $(SRCMOC) $(tmpbin)/silex

# Other targets
# -------------
$(tmpbin)/silex: $(OBJ)
	$(CXX) -o $@ $(OBJ) $(LDFLAGS) $(LIBS)


install_bin: $(tmpbin)/silex
	$(INSTALL) $(tmpbin)/silex $(bindir)

moc: $(SRCMOC)

# Source file specific rules
# --------------------------
${SRCMOC}:
	${MOC} ${@:_moc.C=.h} > $@

# Automatic dependency stuff
# --------------------------
@TARGETS@
