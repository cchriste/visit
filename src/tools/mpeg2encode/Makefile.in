###############################################################################

@SET_MAKE@
@VARIABLES@

CFLAGS=-I. @CFLAGS@ -O2

##
## Source files
##

SRC=conform.c \
fdctref.c \
idct.c \
motion.c \
mpeg2enc.c \
predict.c \
putbits.c \
puthdr.c \
putmpg.c \
putpic.c \
putseq.c \
putvlc.c \
quantize.c \
ratectl.c \
readpic.c \
stats.c \
transfrm.c \
writepic.c

OBJ=$(SRC:.c=.o)

all: message $(tmpbin)/mpeg2encode

############
# BINARIES #
############

$(tmpbin)/mpeg2encode: $(OBJ)
	$(CC) $(CFLAGS) -o $@ $(OBJ) $(LIBDIRS) $(LDFLAGS) $(LIBS)
	strip $(tmpbin)/mpeg2encode

clean:
	$(RM) $(tmpbin)/mpeg2encode $(OBJ)

message:
	@echo
	@echo "****************************************************************************"
	@echo "****************************************************************************"
	@echo "***"
	@echo "*** Building mpeg2encode ($(tmpbin)/mpeg2encode)"
	@echo "***"
	@echo "****************************************************************************"
	@echo "****************************************************************************"

##
## Automatic dependency stuff
##
@TARGETS@
