##############################################################################

@SET_MAKE@
@VARIABLES@

SRC=XMLEditMain.C \
    XMLDocument.C \
    XMLEdit.C \
    XMLEditAttribute.C \
    XMLEditPlugin.C \
    XMLEditEnums.C \
    XMLEditFields.C \
    XMLEditFunctions.C \
    XMLEditCode.C \
    XMLEditCodeGeneratorWindow.C \
    XMLEditCodeSelectionDialog.C \
    XMLEditConstants.C \
    XMLEditIncludes.C \
    XMLEditMakefile.C
WIDGET=XMLEdit.h \
       XMLEditAttribute.h \
       XMLEditPlugin.h \
       XMLEditEnums.h \
       XMLEditFields.h \
       XMLEditFunctions.h \
       XMLEditCode.h \
       XMLEditCodeGeneratorWindow.h \
       XMLEditCodeSelectionDialog.h \
       XMLEditConstants.h \
       XMLEditIncludes.h \
       XMLEditMakefile.h

OBJ=$(SRC:.C=.o)
MOCSRC=$(WIDGET:.h=_moc.C)
MOCOBJ=$(WIDGET:.h=_moc.o)
LDFLAGS=@QT_LDFLAGS@ @LDFLAGS@
LIBS=@QT_LIBS@ $(X_LIBS) @LIBS@
CXXFLAGS=@CXXFLAGS@ @QT_CXXFLAGS@
CPPFLAGS=@CPPFLAGS@ -I$(TOPDIR)/include/visit -I../xml -I.

.SUFFIXES: .C _moc.C _moc.o

all: $(tmpbin)/xmledit

clean:
	$(RM) xmledit $(OBJ) $(MOCSRC) $(MOCOBJ)

$(tmpbin)/xmledit: $(OBJ) $(MOCSRC) $(MOCOBJ)
	$(CXX) $(OBJ) $(MOCOBJ) -o $@ $(CXXFLAGS) $(LDFLAGS) $(LIBS)

purify: $(OBJ) $(MOCSRC) $(MOCOBJ)
	purify $(CXX) $(OBJ) $(MOCOBJ) -o $(tmpbin)/xmledit $(CXXFLAGS) $(LDFLAGS) $(LIBS)

@TARGETS@
