###############################################################################

@SET_MAKE@
@VARIABLES@

CPPFLAGS=@CPPFLAGS@ -I$(TOPDIR)/include/visit -I.

##
## Source files
##

COMMON_SRC=ImageObject.C
COMMON_OBJ=$(COMMON_SRC:.C=.o)

VISIT_COMPOSITE_OBJ=visit_composite.o $(COMMON_OBJ)
VISIT_COMPOSITE=$(tmpbin)/visit_composite

VISIT_TRANSITION_OBJ=visit_transition.o $(COMMON_OBJ)
VISIT_TRANSITION=$(tmpbin)/visit_transition

SRC=$(COMMON_SRC) visit_composite.C visit_transition.C

all: message $(VISIT_COMPOSITE) $(VISIT_TRANSITION)

############
# BINARIES #
############

$(VISIT_COMPOSITE): $(VISIT_COMPOSITE_OBJ)
	$(CXX) $(CXXFLAGS) -o $@ $(VISIT_COMPOSITE_OBJ) $(LIBDIRS) $(LIBS)
	strip $(VISIT_COMPOSITE)

$(VISIT_TRANSITION): $(VISIT_TRANSITION_OBJ)
	$(CXX) $(CXXFLAGS) -o $@ $(VISIT_TRANSITION_OBJ) $(LIBDIRS) $(LIBS)
	strip $(VISIT_TRANSITION)

clean:
	$(RM) $(VISIT_COMPOSITE) $(VISIT_COMPOSITE_OBJ)
	$(RM) $(VISIT_TRANSITION) $(VISIT_TRANSITION_OBJ)

message:
	@echo
	@echo "****************************************************************************"
	@echo "****************************************************************************"
	@echo "***"
	@echo "*** Building VisIt's image tools ($(tmpbin)/imagetools)"
	@echo "***"
	@echo "****************************************************************************"
	@echo "****************************************************************************"

##
## Automatic dependency stuff
##
ALLOBJ=$(COMMON_OBJ) $(VISIT_COMPOSITE_OBJ) $(VISIT_TRANSITION_OBJ)
@TARGETS@
