##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

CPPFLAGS=@CPPFLAGS@ @SILO_INCLUDE@ -I$(TOPDIR)/include/visit

LIBS=$(SILO_LIB) @LIBS@
LIBDEP=

##
## Files...
##
SRC=curv3dprep.C
HDR=
OBJ=$(SRC:.C=.o)

##
## Standard targets...
##
all: $(LIB) $(tmpbin)/curv3dprep

install_bin: $(bindir)/curv3dprep

clean:
	$(RM) $(OBJ) $(tmpbin)/curv3dprep

##
## Other targets...
##
$(tmpbin)/curv3dprep: $(LIBDEP) $(OBJ)
	$(CXX) -o $@ $(OBJ) $(LDFLAGS) $(LIBS)

install_bin: $(tmpbin)/curv3dprep
	$(INSTALL) $(tmpbin)/curv3dprep $(bindir)

##
## Automatic dependency stuff
##
@TARGETS@
