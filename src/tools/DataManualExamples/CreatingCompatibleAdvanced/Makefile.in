@SET_MAKE@
@VARIABLES@

#
# Override some make variables
#
F77FLAGS=-g $(SILO_INCLUDE) -I.
CFLAGS=-g $(SILO_INCLUDE) -I.
LDFLAGS=
LIBS=$(SILO_LIB) -lm
BUILD_FORTRAN=allfortran

# Vector var
PROGRAM_VECTORVAR=vectorvar
OBJ_VECTORVAR=vectorvar.o
FPROGRAM_VECTORVAR=fvectorvar
FOBJ_VECTORVAR=fvectorvar.o

# Data extents
PROGRAM_DATAEXTENTS=dataextents
OBJ_DATAEXTENTS=dataextents.o
FPROGRAM_DATAEXTENTS=fdataextents
FOBJ_DATAEXTENTS=fdataextents.o

# Spatial extents
PROGRAM_SPATIALEXTENTS=spatialextents
OBJ_SPATIALEXTENTS=spatialextents.o
FPROGRAM_SPATIALEXTENTS=fspatialextents
FOBJ_SPATIALEXTENTS=fspatialextents.o

# Ghost zones
PROGRAM_GHOSTZONESINFILE=ghostzonesinfile
OBJ_GHOSTZONESINFILE=ghostzonesinfile.o
FPROGRAM_GHOSTZONESINFILE=fghostzonesinfile
FOBJ_GHOSTZONESINFILE=fghostzonesinfile.o

# Mixed materials
PROGRAM_MIXEDMATERIALS=mixedmaterials
OBJ_MIXEDMATERIALS=mixedmaterials.o
FPROGRAM_MIXEDMATERIALS=fmixedmaterials
FOBJ_MIXEDMATERIALS=fmixedmaterials.o

all: $(PROGRAM_VECTORVAR) $(PROGRAM_DATAEXTENTS) $(PROGRAM_SPATIALEXTENTS) $(PROGRAM_GHOSTZONESINFILE) $(PROGRAM_MIXEDMATERIALS) @BUILD_FORTRAN@

allfortran: $(FPROGRAM_VECTORVAR) $(FPROGRAM_DATAEXTENTS) $(FPROGRAM_SPATIALEXTENTS) $(FPROGRAM_GHOSTZONESINFILE) $(FPROGRAM_MIXEDMATERIALS)

clean: cleanC_and_Fortran clean_data

cleanC_and_Fortran:
	$(RM) $(PROGRAM_VECTORVAR) $(OBJ_VECTORVAR) $(FPROGRAM_VECTORVAR) $(FOBJ_VECTORVAR)
	$(RM) $(PROGRAM_DATAEXTENTS) $(OBJ_DATAEXTENTS) $(FPROGRAM_DATAEXTENTS) $(FOBJ_DATAEXTENTS)
	$(RM) $(PROGRAM_SPATIALEXTENTS) $(OBJ_SPATIALEXTENTS) $(FPROGRAM_SPATIALEXTENTS) $(FOBJ_SPATIALEXTENTS)
	$(RM) $(PROGRAM_GHOSTZONESINFILE) $(OBJ_GHOSTZONESINFILE) $(FPROGRAM_GHOSTZONESINFILE) $(FOBJ_GHOSTZONESINFILE)
	$(RM) $(PROGRAM_MIXEDMATERIALS) $(OBJ_MIXEDMATERIALS) $(FPROGRAM_MIXEDMATERIALS) $(FOBJ_MIXEDMATERIALS)

clean_data:
	$(RM) *.silo *.root *.0 *.1 *.2 *.3 *.4

$(PROGRAM_VECTORVAR): $(OBJ_VECTORVAR)
	$(CC) -o $(PROGRAM_VECTORVAR) $(OBJ_VECTORVAR) $(LDFLAGS) $(LIBS)

$(FPROGRAM_VECTORVAR): $(FOBJ_VECTORVAR)
	$(F77) -o $(FPROGRAM_VECTORVAR) $(FOBJ_VECTORVAR) $(LDFLAGS) $(LIBS)

$(PROGRAM_DATAEXTENTS): $(OBJ_DATAEXTENTS)
	$(CC) -o $(PROGRAM_DATAEXTENTS) $(OBJ_DATAEXTENTS) $(LDFLAGS) $(LIBS)

$(FPROGRAM_DATAEXTENTS): $(FOBJ_DATAEXTENTS)
	$(F77) -o $(FPROGRAM_DATAEXTENTS) $(FOBJ_DATAEXTENTS) $(LDFLAGS) $(LIBS)

$(PROGRAM_SPATIALEXTENTS): $(OBJ_SPATIALEXTENTS)
	$(CC) -o $(PROGRAM_SPATIALEXTENTS) $(OBJ_SPATIALEXTENTS) $(LDFLAGS) $(LIBS)

$(FPROGRAM_SPATIALEXTENTS): $(FOBJ_SPATIALEXTENTS)
	$(F77) -o $(FPROGRAM_SPATIALEXTENTS) $(FOBJ_SPATIALEXTENTS) $(LDFLAGS) $(LIBS)

$(PROGRAM_GHOSTZONESINFILE): $(OBJ_GHOSTZONESINFILE)
	$(CC) -o $(PROGRAM_GHOSTZONESINFILE) $(OBJ_GHOSTZONESINFILE) $(LDFLAGS) $(LIBS)

$(FPROGRAM_GHOSTZONESINFILE): $(FOBJ_GHOSTZONESINFILE)
	$(F77) -o $(FPROGRAM_GHOSTZONESINFILE) $(FOBJ_GHOSTZONESINFILE) $(LDFLAGS) $(LIBS)

$(PROGRAM_MIXEDMATERIALS): $(OBJ_MIXEDMATERIALS)
	$(CC) -o $(PROGRAM_MIXEDMATERIALS) $(OBJ_MIXEDMATERIALS) $(LDFLAGS) $(LIBS)

$(FPROGRAM_MIXEDMATERIALS): $(FOBJ_MIXEDMATERIALS)
	$(F77) -o $(FPROGRAM_MIXEDMATERIALS) $(FOBJ_MIXEDMATERIALS) $(LDFLAGS) $(LIBS)

@TARGETS@
