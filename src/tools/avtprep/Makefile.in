##############################################################################

##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@
@MPI_CC@
@MPI_CXX@

CPPFLAGS=-I. -I../../include -I../../include/visit

SERLIBS=-L../../lib -lXext -lprep_ser -ldatabase_ser -lpipeline_ser -lvisit_vtk -lutility -lmisc -lcomm -lrpc -lstate -ldbatts -lavtexceptions @SILO_LIB@ @VTK_LIBS@ $(X_LIBS) $(BZIP2_LIBS) @LIBS@ @PTHREAD_LIB@
PARLIBS=-L../../lib -lXext -lprep_par -ldatabase_par -lpipeline_par -lvisit_vtk -lutility -lmisc -lcomm -lrpc -lstate -ldbatts -lavtexceptions @SILO_LIB@ @VTK_LIBS@ $(X_LIBS) $(BZIP2_LIBS) @LIBS@ @MPI_LIBS@ @PTHREAD_LIB@
LIBDEP=

##
## Files...
##
SRC=avtprep.C
SEROBJ=$(SRC:.C=.o)
PAROBJ=$(SRC:.C=_par.o)


##
## Standard targets...
##
all: $(LIB) @AVTPREP_SER@ @AVTPREP_SER@

clean:
	$(RM) $(OBJ) @AVTPREP_SER@ @AVTPREP_PAR@

##
## Other targets...
##
@AVTPREP_SER@ or_no_ser: $(LIBDEP) $(SEROBJ)
	$(CXX) -o $@ $(SEROBJ) $(LDFLAGS) $(SERLIBS)

@AVTPREP_PAR@ or_no_par: $(LIBDEP) $(PAROBJ)
	$(CXX) -o $@ $(PAROBJ) $(LDFLAGS) $(PARLIBS) @MPI_LIBS@

##
## Automatic dependency stuff
##
@TARGETS@
