##############################################################################

@SET_MAKE@
@VARIABLES@

# Files
# -----
PROG    = clip
SRC     = main.C Matrix.C Vector.C \
          Transforms.C Shape.C DataSet.C Font.C \
          ClipEditor.C Viewer.C
WIDGETS = ClipEditor.h Viewer.h

# Compile flags
# -------------
LIBS=@QT_LIBS@ $(X_LIBS) @LIBS@
LDFLAGS=@QT_LDFLAGS@ @LDFLAGS@ @EXE_LDFLAGS@
LIBDEP=
CXXFLAGS=@CXXFLAGS@ @QT_CXXFLAGS@
CPPFLAGS=@CPPFLAGS@ -I$(TOPDIR)/include/visit -I.

# Derived objects
# ---------------
OBJ    = $(SRC:.C=.o)
MOCSRC = $(WIDGETS:.h=_moc.C)
MOCOBJ = $(MOCSRC:.C=.o)

# Targets
# -------

all: $(PROG)

# (link)
$(PROG): Makefile $(OBJ) $(MOCOBJ)
	 $(CXX) $(LIBDIR) $(LDFLAGS) $(OBJ) $(MOCOBJ) -o $(PROG) $(LIBS)

# (clean)
clean  :
	 rm -f $(OBJ) $(MOCOBJ) $(MOCSRC) $(PROG)


@TARGETS@
