@SET_MAKE@
@VARIABLES@

# Files
# -----
PROG    = clip
SRC     = main.C Matrix.C Vector.C \
          Transforms.C Shape.C DataSet.C Font.C \
          ClipEditor.C Viewer.C
WIDGETS = ClipEditor.h Viewer.h

# Compile flags
# -------------
INCDIR  = -I. -I../../include/qt -I../../include/visit
LDFLAGS = @LDFLAGS@
LIBS    = @QT_LIBS@ $(X_LIBS) -lGL @LIBS@

# Derived objects
# ---------------
OBJ    = $(SRC:.C=.o)
MOCSRC = $(WIDGETS:.h=_moc.C)
MOCOBJ = $(MOCSRC:.C=.o)

MOC    = @QT_MOC@

# Targets
# -------

all: $(PROG)

# (link)
$(PROG): Makefile $(OBJ) $(MOCOBJ)
	 $(CXX) $(LIBDIR) $(LDFLAGS) $(OBJ) $(MOCOBJ) -o $(PROG) $(LIBS)

# (compile)
.C.o   : $(SRC)
	 $(CXX) $(CFLAGS) $(INCDIR) -c $<

# (moc)
$(MOCSRC) or_no_widgets:
	@rm -f $@
	$(MOC) $(@:_moc.C=.h) > $@

# (clean)
clean  :
	 rm -f $(OBJ) $(MOCOBJ) $(MOCSRC) $(PROG)

distclean: clean
	rm -f Makefile
