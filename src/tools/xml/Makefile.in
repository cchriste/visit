@SET_MAKE@
@VARIABLES@

# Force recompilation when any of these header files change.
DEPENDENT_HEADERS=\
Attribute.h \
AttributeBase.h \
Code.h \
CodeFile.h \
Constant.h \
Enum.h \
Field.h \
Function.h \
Include.h \
Plugin.h \
PluginBase.h \
XMLParser.h \
XMLParserUtil.h

PROGRAM1 = $(tmpbin)/xmltest
DEFINES1 = -DTEST_ONLY

PROGRAM2 = $(tmpbin)/xml2atts
DEFINES2 = -DGENERATE_ATTS

PROGRAM3 = $(tmpbin)/xml2window
DEFINES3 = -DGENERATE_WINDOW

PROGRAM4 = $(tmpbin)/xml2info
DEFINES4 = -DGENERATE_INFO

PROGRAM5 = $(tmpbin)/xml2makefile
DEFINES5 = -DGENERATE_MAKEFILE

PROGRAM6 = $(tmpbin)/xml2avt
DEFINES6 = -DGENERATE_AVT

PROGRAM7 = $(tmpbin)/xml2python
DEFINES7 = -DGENERATE_PYTHON

PROGRAM8 = $(tmpbin)/xml2java
DEFINES8 = -DGENERATE_JAVA

PROGRAM9 = $(tmpbin)/xml2projectfile
DEFINES9 = -DGENERATE_PROJECTFILE

SRC=main.C
OBJ=$(SRC:.C=.o)

CXXFLAGS=@CXXFLAGS@ @QT_CXXFLAGS@ -I. -I../../include -I../../include/visit
LDFLAGS=@QT_LDFLAGS@ @LDFLAGS@ @QT_LIBS@ @LIBS@

all: $(PROGRAM1) $(PROGRAM2) $(PROGRAM3) $(PROGRAM4) $(PROGRAM5) $(PROGRAM6) $(PROGRAM7) $(PROGRAM8)

clean:
	$(RM) $(OBJ) $(PROGRAM1) $(PROGRAM2) $(PROGRAM3) $(PROGRAM4) $(PROGRAM5) $(PROGRAM6) $(PROGRAM7) $(PROGRAM8) $(PROGRAM9)

$(PROGRAM1): $(SRC) $(DEPENDENT_HEADERS)
	$(CXX) main1.C -o $@ $(CXXFLAGS) $(LDFLAGS) $(DEFINES1)

$(PROGRAM2): $(SRC) GenerateAtts.h $(DEPENDENT_HEADERS)
	$(CXX) main2.C -o $@ $(CXXFLAGS) $(LDFLAGS) $(DEFINES2)

$(PROGRAM3): $(SRC) GenerateWindow.h $(DEPENDENT_HEADERS)
	$(CXX) main3.C -o $@ $(CXXFLAGS) $(LDFLAGS) $(DEFINES3)

$(PROGRAM4): $(SRC) GenerateInfo.h $(DEPENDENT_HEADERS)
	$(CXX) main4.C -o $@ $(CXXFLAGS) $(LDFLAGS) $(DEFINES4)

$(PROGRAM5): $(SRC) GenerateMakefile.h $(DEPENDENT_HEADERS)
	$(CXX) main5.C -o $@ $(CXXFLAGS) $(LDFLAGS) $(DEFINES5)

$(PROGRAM6): $(SRC) GenerateAVT.h $(DEPENDENT_HEADERS)
	$(CXX) main6.C -o $@ $(CXXFLAGS) $(LDFLAGS) $(DEFINES6)

$(PROGRAM7): $(SRC) GeneratePython.h $(DEPENDENT_HEADERS)
	$(CXX) main7.C -o $@ $(CXXFLAGS) $(LDFLAGS) $(DEFINES7)

$(PROGRAM8): $(SRC) GenerateJava.h $(DEPENDENT_HEADERS)
	$(CXX) main8.C -o $@ $(CXXFLAGS) $(LDFLAGS) $(DEFINES8)

$(PROGRAM9): $(SRC) GenerateProjectFile.h $(DEPENDENT_HEADERS)
	$(CXX) main9.C -o $@ $(CXXFLAGS) $(LDFLAGS) $(DEFINES9)

@TARGETS@
