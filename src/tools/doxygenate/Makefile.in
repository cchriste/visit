##############################################################################

##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

LIBS=-ll @LIBS@
CPPFLAGS=-I. @CPPFLAGS@

NOT_DISTRIB=lex.C

##
## Files...
##
DOXYGENATE_SRC=DoxygenDirective.C Doxygenator.C
LEX_SRC=lex.C

PRIVATE_HDR=Tokens.h

DISTRIB=

SRC=$(DOXYGENATE_SRC) $(LEX_SRC)
OBJ=$(SRC:.C=.o)


##
## Standard targets...
##
all: message $(tmpbin)/doxygenate

install: install_bin

clean:
	$(RM) $(OBJ) $(LEX_SRC) $(tmpbin)/doxygenate

##
## Other targets...
##
$(tmpbin)/doxygenate: $(LIBDEP) $(OBJ)
	$(CXX) $(CXXFLAGS) -o $@ $(OBJ) $(LDFLAGS) $(LIBS)

install_bin: $(tmpbin)/doxygenate
	$(INSTALL) $(tmpbin)/doxygenate $(bindir)

message:
	@echo
	@echo "****************************************************************************"
	@echo "*** Building doxygenate ($(tmpbin)/doxygenate)"
	@echo "****************************************************************************"
#
## Must manually put in lex rule.  We must rename it to get the C++ suffix.
##
lex.C: doxygenate.l
	lex doxygenate.l
	mv lex.yy.c lex.C

##
## Automatic dependency stuff
##
@TARGETS@
