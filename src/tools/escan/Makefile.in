# Programs and options
# --------------------
@SET_MAKE@
@VARIABLES@

NOT_DISTRIB=lex.yy.c

CXXFLAGS=-I. @CXXFLAGS@
LIBS=-ll
LEX=lex

GENSRC=lex.yy.c
SRC=exception_scanner.c
OBJ=$(SRC:.c=.o) $(GENSRC:.c=.o)

DISTRIB=

# Standard targets
# ----------------
all: escan

clean:
	$(RM) escan $(OBJ) $(GENSRC)

# Other targets
# ----------------

escan: $(GENSRC) $(OBJ)
	$(CC) -o escan $(OBJ) $(CFLAGS) $(LDFLAGS) $(LIBS)

$(GENSRC):
	$(LEX) rules

# Automatic dependency stuff
# --------------------------
@TARGETS@
