##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@
@MPI_CC@
@MPI_CXX@
LIBS=@SILO_LIB@ -lsiloobj @LIBS@ @MPI_LIBS@ -lutility
LIBDEP=$(tmplib)/libsiloobj.a
CPPFLAGS=-I. @PREPROCESSOR_CPPFLAGS@ @CPPFLAGS@

##
## Files...
##
PAR_SRC=@PREPROCESSOR_PARALLEL_SRC@
OBJECT_SRC=StructuredTopology_Prep.C Material_Prep.C TimeSequence_Prep.C\
           Field_Prep.C UnstructuredTopology_Prep.C Value_Prep.C IntervalTree_Prep.C\
           Frame.C Cell.C Resample.C Mesh_Prep.C $(PAR_SRC)
MESHTVPREP_SRC=Main.C CommandLine.C MeshtvPrep.C InputRepository.C \
               MeshtvPrepLib.C $(OBJECT_SRC)
PRIVATE_HDR=
DISTRIB=
SRC=$(MESHTVPREP_SRC)
OBJ=$(SRC:.C=.o)


##
## Standard targets...
##
all: message $(tmpbin)/meshtvprep

install: install_bin

clean:
	$(RM) $(OBJ) $(tmpbin)/meshtvprep

##
## Other targets...
##
$(tmpbin)/meshtvprep: $(LIBDEP) $(OBJ)
	$(CXX) $(CXXFLAGS) -o $@ $(OBJ) $(LDFLAGS) $(LIBS)

install_bin: $(tmpbin)/meshtvprep
	$(INSTALL) $(tmpbin)/meshtvprep $(bindir)

message:
	@echo
	@echo "****************************************************************************"
	@echo "*** Building meshtvprep ($(tmpbin)/meshtvprep)"
	@echo "****************************************************************************"

##
## Automatic dependency stuff
##
@TARGETS@
