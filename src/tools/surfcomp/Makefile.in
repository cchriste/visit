##
## Programs and options...
##
@SET_MAKE@
@VARIABLES@

CXXFLAGS=-I. @VTK_INCLUDES@ @CXXFLAGS@

LIBS=@VTK_LIBS@ $(MESA_LIBS) $(GL_LIBS) @PTHREAD_LIB@ @X_LIBS@

##
## Files...
##
SRC=surfcomp.C
OBJ=$(SRC:.C=.o)


##
## Standard targets...
##
all: $(tmpbin)/surfcomp

install: install_bin

clean:
	$(RM) $(OBJ) $(tmpbin)/surfcomp

##
## Other targets...
##
$(tmpbin)/surfcomp: $(OBJ)
	$(CXX) -o $@ $(OBJ) $(LDFLAGS) $(LIBS)

install_bin: $(tmpbin)/surfcomp
	$(INSTALL) $(tmpbin)/surfcomp $(bindir)

##
## Automatic dependency stuff
##
@TARGETS@
