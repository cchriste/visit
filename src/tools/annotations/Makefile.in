# Programs and options
# --------------------
@SET_MAKE@
@VARIABLES@
LIBS=@VTK_LIBS@ @PTHREAD_LIB@ @X_LIBS@
CPPFLAGS=@CPPFLAGS@ @VTK_INCLUDES@ -I$(TOPDIR)/include/visit -I.

T2P_SRC    = text2polys.C arial_font.C
TA_SRC     = time_annotation.C arial_font.C

# Derived objects
# ---------------
T2P_OBJ=$(T2P_SRC:.C=.o) 
TA_OBJ=$(TA_SRC:.C=.o) 
DISTRIB=


# Standard targets
# ----------------
all: $(tmpbin)/text2polys $(tmpbin)/time_annotation

install: install_bin

clean:
	$(RM) $(T2P_OBJ) $(TA_OBJ) $(tmpbin)/text2polys $(tmpbin)/time_annotation

# Other targets
# -------------
$(tmpbin)/text2polys: $(T2P_OBJ)
	$(CXX) -o $@ $(T2P_OBJ) $(LDFLAGS) $(LIBS)

$(tmpbin)/time_annotation: $(TA_OBJ)
	$(CXX) -o $@ $(TA_OBJ) $(LDFLAGS) $(LIBS)


install_bin: $(tmpbin)/text2polys $(tmpbin)/time_annotation
	$(INSTALL) $(tmpbin)/text2polys $(bindir)
	$(INSTALL) $(tmpbin)/time_annotation $(bindir)

# Automatic dependency stuff
# --------------------------
@TARGETS@
